@model RegisterViewModel
@{
    ViewBag.Title = "Register Page";
    Layout = "_Layout.cshtml";
}


<div class="d-flex justify-content-center mt-5" style="height:70vh">

    <div class="border col-4 rounded p-4" style="min-height:300px">
        <h1 class="mb-3">Admin Login</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="Register" asp-controller="Admin">
            <div class="form-group m-1">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="FirstName" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="FirstName"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="LastName" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="LastName"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="ConfirmedPassword"></label>
                <input asp-for="ConfirmedPassword" placeholder="ConfirmedPassword" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="ConfirmedPassword"></span></small>
            </div>
            <div class="form-group m-1">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

        </form>
    </div>

</div>