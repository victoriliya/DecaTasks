@model Profile

<div class="card">
    <div class="row">
        <div class="col-md-4">
            <img src="~/Images/profile.jpg" alt="..." class="img-fluid rounded-circle" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">About me</h5>
                <p class="card-text">
                    @Model.Bio
                </p>
            </div>
        </div>
    </div>
</div>


<div id="accordion">
    @foreach (var skill in Model.Skills)
    {
        <partial name="_SkillCard" model="skill" />
    }
</div>

<section id="recentProjects">
    <h2 class="text-center">Recent Projects</h2>
    <div class="container">
        <div class="row">

            @foreach (var project in Model.Projects)
            {
                <partial name="_ProjectCard" model="project" />
            }


        </div>
    </div>

</section>

<partial name="_Footer" />

