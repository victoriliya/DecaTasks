@model AdminViewModel
@{ 
    ViewBag.Title = "Login Page";
    Layout = "_Layout.cshtml";

    var errMsg = "";
    if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
    {
        errMsg = ViewBag.ErrorMessage;
    }
}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">

    <div class="border col-4 rounded p-4" style="min-height:300px">


        <div asp-validation-summary="ModelOnly"></div>
        <h1 class="mb-3">Admin Login</h1>
        <form method="post" asp-action="Login" asp-controller="Admin">
            <div class="form-group m-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="form-group m-1 d-flex align-items-center">
                <input asp-for="RememberMe" class="form-control mr-2" style="width:15px; height:15px; margin-top:-5px" />
                <label asp-for="RememberMe"></label>
            </div>

            <div class="form-group m-1">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

        </form>
    </div>

</div>