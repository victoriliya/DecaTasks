@model Profile

@{
    var uniqueId = @Model.FirstName[0] + Model.Id.ToString();
}



<button type="button" class="btn btn-primary mybutton" data-toggle="modal" data-target="#@uniqueId">
    Edit Profile
</button>

<button type="button" class="btn btn-success mybutton" data-toggle="modal" data-target="#create-new-profile">
    New Profile
</button>

<!-- Modal -->
<div class="modal fade" id="@uniqueId" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly"></div>

                <form method="post" asp-action="UpdateProfile" asp-controller="Admin">
                    <div class="form-group m-1">
                        <label asp-for="@Model.FirstName"></label>
                        <input asp-for="@Model.FirstName" value="@Model.FirstName" placeholder="Firstname" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.FirstName"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for="@Model.SecondtName"></label>
                        <input asp-for="@Model.SecondtName" value="@Model.SecondtName" placeholder="LastName" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.SecondtName"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.OtherName"></label>
                        <input asp-for="@Model.OtherName" value="@Model.OtherName" placeholder="OtherName" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.OtherName"></span></small>
                    </div>


                    <div class="form-group m-1">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" value="@Model.Email" placeholder="Email" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.Email"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.DateOfBirth"></label>
                        <input asp-for="@Model.DateOfBirth" value="@Model.DateOfBirth" placeholder="Email" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.DateOfBirth"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.ProfilePictureUrl"></label>
                        <input asp-for="@Model.ProfilePictureUrl" value="@Model.ProfilePictureUrl" placeholder="ProfilePictureUrl" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.ProfilePictureUrl"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.FacebookLink"></label>
                        <input asp-for="@Model.FacebookLink" value="@Model.FacebookLink" placeholder="FacebookLink" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.FacebookLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.TwitterLink"></label>
                        <input asp-for="@Model.TwitterLink" value="@Model.TwitterLink" placeholder="TwitterLink" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.TwitterLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.LinkdInLink"></label>
                        <input asp-for="@Model.LinkdInLink" placeholder="LinkdInLink" value="@Model.LinkdInLink" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.LinkdInLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.GitLink"></label>
                        <input asp-for="@Model.GitLink" value="@Model.GitLink" placeholder="GitLink" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.GitLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.Bio"></label>

                        <textarea asp-for="@Model.Bio" class="form-control" data-bind="@Model.Bio"></textarea>

                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.Bio" ca></span></small>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="create-new-profile" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly"></div>

                <form method="post" asp-action="CreateNewProfile" asp-controller="Admin">
                    <div class="form-group m-1">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName"  value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="FirstName"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for="@Model.SecondtName"></label>
                        <input asp-for="@Model.SecondtName"  value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.SecondtName"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.OtherName"></label>
                        <input asp-for="@Model.OtherName"  value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.OtherName"></span></small>
                    </div>


                    <div class="form-group m-1">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email"  value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.Email"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.DateOfBirth"></label>
                        <input asp-for="@Model.DateOfBirth" value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.DateOfBirth"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.ProfilePictureUrl"></label>
                        <input asp-for="@Model.ProfilePictureUrl" value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.ProfilePictureUrl"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.FacebookLink"></label>
                        <input asp-for="@Model.FacebookLink" value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.FacebookLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.TwitterLink"></label>
                        <input asp-for="@Model.TwitterLink"  value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.TwitterLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.LinkdInLink"></label>
                        <input asp-for="@Model.LinkdInLink" value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.LinkdInLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="@Model.GitLink"></label>
                        <input asp-for="@Model.GitLink" value="" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.GitLink"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for="Bio"></label>

                        <textarea asp-for="Bio" class="form-control"></textarea>

                        <small class="mb-1 text-danger"><span asp-validation-for="Bio" ca></span></small>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create New User</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>

