
@model Project
@{
    

    var uniqueId = @Model.ProjectName[0] + Model.ProjectId.ToString();
 
}
<!-- Button trigger modal -->



<button type="button" class="btn btn-primary mybutton" data-toggle="modal" data-target="#@uniqueId">
    @Model.ProjectName
</button>

<!-- Modal -->
<div class="modal fade" id="@uniqueId" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form method="post" asp-action="UpdateProject" asp-controller="Admin">
                    <input type="hidden" asp-for="@Model.ProjectId" value="@Model.ProjectId">
                    <input type="hidden" asp-for="@Model.ProjectId" value="@Model.ProjectId">
                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectName"></label>
                        <input asp-for=" @Model.ProjectName" placeholder="Project Name" class="form-control" value="@Model.ProjectName" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectName"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectDescription"></label>
                        <input asp-for=" @Model.ProjectDescription" placeholder="Project description" class="form-control" value="@Model.ProjectDescription" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectDescription"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectSnapShop"></label>
                        <input asp-for=" @Model.ProjectSnapShop" placeholder="Snap Shot link" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectSnapShop" value="@Model.ProjectSnapShop"></span></small>
                    </div>

                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectLink"></label>
                        <input asp-for=" @Model.ProjectLink" placeholder="Project link" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for="@Model.ProjectLink"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectGitReposiory"></label>
                        <input asp-for=" @Model.ProjectGitReposiory" placeholder="Git repository" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectGitReposiory"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectDemoVideoLink"></label>
                        <input asp-for=" @Model.ProjectDemoVideoLink" placeholder="Demo link" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectDemoVideoLink"></span></small>
                    </div>
                    <div class="form-group m-1">
                        <label asp-for=" @Model.ProjectStartDate"></label>
                        <input asp-for=" @Model.ProjectStartDate" placeholder="Project start date" class="form-control" />
                        <small class="mb-1 text-danger"><span asp-validation-for=" @Model.ProjectStartDate"></span></small>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
